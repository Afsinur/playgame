<!DOCTYPE html>
<html lang="en">
  <%- include('header/header.ejs') %>

  <body>
    <div id="app">
      <div v-if="goConditions != 0">
        <div id="enter">
          <h1>Enter game as a..</h1>

          <div>
            <button @click.once="connectGame(0)">Connector</button>
            <button @click.once="connectGame(1)">Reciever</button>
          </div>
        </div>
      </div>

      <div v-if="afterConnected == false">
        <div id="enter" v-if="connector == 1 ">
          <div><h1>Game ID: <%= userID %></h1></div>
        </div>

        <div id="enter" v-if="connector == 0 ">
          <div>
            <h1>
              Game ID:

              <input type="text" id="gameID" placeholder="enter ID.." />

              <button @click.once="prepareConnect">connect</button>
            </h1>
          </div>
        </div>
      </div>

      <div v-if="afterConnected == true">
        <div id="gameDiv">
          <div><%- include('row_divs/row_divs1.ejs') %></div>

          <div><%- include('row_divs/row_divs2.ejs') %></div>

          <div><%- include('row_divs/row_divs3.ejs') %></div>
        </div>
      </div>
    </div>
  </body>
</html>
